{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",  // or ES6
    "lib": ["ES2021"],
    "moduleResolution": "node",
    "outDir": "lib",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
